#!/bin/sh

case $1 in
send)
  counter=1
  until [ $counter -gt 5 ]
  do
    echo -e $2 > /dev/ttyS0
    ((counter++))
  done
  ;;
pid)
 case $2 in
    set)
    pid=$4
    echo ${pid} > /Oya/pid/uart_process
    ;;
    get)
    pid=`cat /Oya/pid/uart_process`
    echo ${pid}
    ;;
    remove)
    rm /Oya/pid/uart_process
    ;;
    esac
  ;;
esac
