#!/bin/sh

case $1 in
mute)
  case $2 in
  get)
    mute=`cat /Oya/state/mute`
    echo ${mute}
    ;;
  set)
    mute=$3
    echo ${mute} > /Oya/state/mute
    ;;
  commit)
    sh /Oya/led.sh
    /etc/init.d/recording restart
  esac
  ;;
islinked)
  case $2 in
  get)
    islinked=`cat /Oya/state/islinked`
    echo ${islinked}
    ;;
  set)
    prevState=`cat /Oya/state/islinked`
    islinked=$3
    echo ${islinked} > /Oya/state/islinked
    if [ ${prevState} == "1" ]; then
      if [ $3 == "0" ]; then
        firstboot
      fi
    fi
    ;;
  commit)
    sh /Oya/led.sh
    ;;
  esac
  ;;
recording)
  case $2 in
  get)
    recording=`cat /Oya/state/recording`
    echo ${recording}
    ;;
  set)
    recording=$3
    echo ${recording} > /Oya/state/recording
    ;;
  esac
  ;;
uploading)
  case $2 in
  get)
    uploading=`cat /Oya/state/uploading`
    echo ${uploading}
    ;;
  set)
    uploading=$3
    echo ${uploading}
    ;;
  esac
  ;;
commit)
  sh /Oya/led.sh
  /etc/init.d/recording restart
esac
